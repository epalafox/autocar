
@{
    ViewBag.Title = "Read";
    var _model = (DataLayer.Auto)Model;
}
<h1>@_model.GetNombre()</h1>
<div class="row">
    <form method="post">
        <input type="hidden" name="_id" value="@_model._id" />
        <div class="col-md-6">
            <div class="form-group">
                <label for="modelo">Modelo</label>
                <input class="form-control" id="modelo" placeholder="Ingresa el modelo"
                       name="Model"
                       value="@_model.Model">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="marca">Marca</label>
                <input class="form-control" id="marca" placeholder="Ingresa la marca"
                       name="Brand"
                       value="@_model.Brand">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="anio">Año</label>
                <input type="number" class="form-control" id="anio" placeholder="Ingresa el año"
                       name="Year"
                       value="@_model.Year">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="km">Kilometraje</label>
                <input type="number" class="form-control" id="km" placeholder="Ingresa el kilometraje"
                       value="@_model.Km">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="extColor">Color exterior</label>
                <input class="form-control" id="extColor" placeholder="Ingresa el modelo"
                       value="@_model.ExtColor">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="intColor">Color interior</label>
                <input class="form-control" id="intColor" placeholder="Ingresa la marca"
                       value="@_model.IntColor">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="modelo">Modelo</label>
                <input class="form-control" id="modelo" placeholder="Ingresa el modelo"
                       value="@_model.Model">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="marca">Marca</label>
                <input class="form-control" id="marca" placeholder="Ingresa la marca"
                       value="@_model.Brand">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="modelo">Modelo</label>
                <input class="form-control" id="modelo" placeholder="Ingresa el modelo"
                       value="@_model.Model">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="marca">Marca</label>
                <input class="form-control" id="marca" placeholder="Ingresa la marca"
                       value="@_model.Brand">
            </div>
        </div>
        <input class="btn btn-danger" type="submit" value="Guardar" />
    </form>
</div>

