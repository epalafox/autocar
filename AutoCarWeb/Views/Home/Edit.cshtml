
@{
    ViewBag.Title = "Edit";
    var _model = (DataLayer.Auto)Model;
}
<h1>@_model.GetNombre()</h1>
<div class="row">
    <form method="post" action="Edit">
        <input type="hidden" name="_id" value="@_model._id" />
        <div class="col-md-6">
            <div class="form-group">
                <label for="modelo">Modelo</label>
                <input class="form-control" id="modelo" placeholder="Ingresa el modelo"
                       name="Model"
                       value="@_model.Model">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="marca">Marca</label>
                <input class="form-control" id="marca" placeholder="Ingresa la marca"
                       name="Brand"
                       value="@_model.Brand">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="anio">Año</label>
                <input type="number" class="form-control" id="anio" placeholder="Ingresa el año"
                       name="Year"
                       value="@_model.Year">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="km">Kilometraje</label>
                <input type="number" class="form-control" id="km" placeholder="Ingresa el kilometraje"
                       name="Km"
                       value="@_model.Km">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="extColor">Color exterior</label>
                <input class="form-control" id="extColor" placeholder="Ingresa el color exterior"
                       name="ExtColor"
                       value="@_model.ExtColor">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="intColor">Color interior</label>
                <input class="form-control" id="intColor" placeholder="Ingresa el color interior"
                       name="IntColor"
                       value="@_model.IntColor">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="modelo">Litros</label>
                <input type="number" class="form-control" id="modelo" placeholder="Ingresa los litros"
                       name="Liters" step="0.1"
                       value="@_model.Liters">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="marca">Puertas</label>
                <input class="form-control" id="marca" placeholder="Ingresa las puertas"
                       name="Doors"
                       value="@_model.Doors">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="marca">Precio</label>
                <input type="number" class="form-control" id="marca" placeholder="Ingresa el precio"
                       name="Price" step="0.01"
                       value="@_model.Price">
            </div>
        </div>
        <input type="submit" class="btn btn-danger" value="Guardar" />
    </form>
</div>

